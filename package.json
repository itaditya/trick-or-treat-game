{
  "name": "trick-or-treat-game",
  "version": "1.0.0",
  "description": "game to collect treats on the board in minimum moves",
  "keywords": [
    "testing",
    "game"
  ],
  "main": "src/index.js",
  "dependencies": {
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*'"
  },
  "devDependencies": {
    "prettier": "1.18.2",
    "@testing-library/react": "9.3.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
